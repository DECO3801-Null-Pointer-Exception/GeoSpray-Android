<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484155">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/create_page_back"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/back_button"
                app:layout_constraintBottom_toTopOf="@id/scrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_arrow" />


            <ImageView
                android:id="@+id/create_upload_image"
                android:layout_width="300sp"
                android:layout_height="228sp"
                android:layout_gravity="center"
                android:layout_marginTop="67dp"
                android:layout_marginHorizontal="30sp"
                android:background="@drawable/rounded_corner"
                android:contentDescription="@string/image_upload"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:text="@string/title"
                android:textColor="@color/text_color"
                android:layout_marginHorizontal="30sp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/create_title"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_gravity="center"
                android:autofillHints="title"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="@string/title"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginHorizontal="30sp"
                android:text="@string/description"
                android:textColor="@color/text_color"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/create_description"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:autofillHints="Description"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:paddingTop="8dp"


                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/location"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/create_location"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_gravity="center"
                android:autofillHints="location"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:hint="@string/location"
                android:inputType="text" />

            <Button

                android:id="@+id/create_upload_submit"
                android:layout_marginHorizontal="30sp"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_gravity="center"
                android:layout_marginTop="35sp"
                android:layout_marginBottom="60sp"
                android:backgroundTint="@color/button"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>